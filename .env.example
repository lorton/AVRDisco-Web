# AVRDisco-Web Environment Configuration
# Copy this file to .env and customize for your environment

# AV Receiver Configuration
AVR_HOST=192.168.1.100
AVR_PORT=60128
AVR_TIMEOUT=5

# Web Server Configuration
# Note: When running with hypercorn (systemd service), HOST and PORT are set
# in the hypercorn command (--bind 0.0.0.0:5000) and these values are ignored.
# These are only used when running directly with: python async_app.py
HOST=localhost
PORT=5000

# CORS Configuration
# Use "*" for development or comma-separated origins for production
# Examples: "http://localhost:3000,http://localhost:5000" or "*"
CORS_ORIGINS=http://localhost:5000

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Debug Mode (prints commands instead of sending them)
# Set to "true" to enable, any other value is false
DEBUG=false
